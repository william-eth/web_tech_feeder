# frozen_string_literal: true

source "https://rubygems.org"

ruby "3.4.8"

# HTTP client
gem "faraday", "~> 2.0"
gem "faraday-retry", "~> 2.0"

# RSS/Atom feed parsing
gem "feedjira", "~> 3.0"

# Email (Gmail API + OAuth, or Mail for raw message building)
gem "mail", "~> 2.8"
gem "google-apis-gmail_v1", "~> 0.23"
gem "googleauth", "~> 1.9"

# Environment variables
gem "dotenv", "~> 3.0"

# JSON parsing (stdlib, but explicitly listed)
gem "json"
